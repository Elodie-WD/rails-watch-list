<h1>Bookmarks#new</h1>



<h1>New Bookmark</h1>

<div class="container">
    <h1 class="text-center">Add a new tag</h1>

    <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.input :comment %>
        <%= f.association :movie, collection: Movie.all %>
        <%= f.submit "Submit bookmark", class: "btn btn-primary" %>
    <% end %>

</div>
